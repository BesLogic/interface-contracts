@using BdeBInterfaceContracts.Models

@model IEnumerable<Order>

@{
	ViewBag.Title = "Commandes";
}

<div class="row">
	@Html.ActionLink(
		"Trier par date de création",
		"Index",
		"Orders",
		new { orderBy = OrderBy.CreationDate },
		new { @class = "btn" })
	@Html.ActionLink(
		"Trier par date de modification",
		"Index",
		"Orders",
		new { orderBy = OrderBy.ModificationDate },
		new { @class = "btn" })
	@Html.ActionLink(
		"Trier par nom",
		"Index",
		"Orders",
		new { orderBy = OrderBy.Name },
		new { @class = "btn" })
</div>

<table class="table">
	<tr>
		<th>
			Description
		</th>
		<th>
			Prix
		</th>
		<th>
			Commandé par
		</th>
	</tr>
	@foreach (var order in Model)
	{
		<tr>
			<td>
				@order.Description
			</td>
			<td>
				@string.Format("{0,2:f}$", order.Price)
			</td>
			<td>
				@order.User.FirstName
			</td>
		</tr>
	}
</table>